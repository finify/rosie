<div class="mobile-video">
    <h2 class="text-center mobile-app-flex-title title-break pb-3">{{ section.settings.title }}</h2>
    <h5 class="mobile-app-flex-subtext text-center pb-3">{{ section.settings.headerrichtext }}</h5>
    <div class="section section-blends section-full pt-0">
        <div class="d-flex flex-row align-items-center row justify-content-center">
            <div class="tab-content col-lg-6 col-md-6 col-12" id="v-pills-tabContent">
              {% if section.blocks %}
                {% for block in section.blocks %}
                      <div class="tab-pane video-tab-pane show" id="v-pills-custom" role="tabpanel" aria-labelledby="v-pills-custom-tab">
                        {% if block.settings.video != nil %}
                          {{ block.settings.video | video_tag:image_size:'400x', class: 'myVideo', width: '100%', preload: 'auto' }}
                        {% endif %}
                      </div>
                {% endfor %}
              {% endif %}
            </div>
            <div class="nav d-flex flex-column nav-pills col-lg-6 col-md-6 col-12 justify-content-around" id="v-pills-tab" role="tablist" aria-orientation="vertical">
              {% if section.blocks %}
                {% for block in section.blocks %}
                      <button class="nav-link video-nav-link mobile-video-item d-flex flex-column" id="v-pills-custom-tab" data-bs-toggle="pill"
                          data-bs-target="#v-pills-custom" type="button" role="tab" aria-controls="v-pills-custom"
                          aria-selected="true">
                          {% if block.settings.title != blank %}
                              <h1 class="tab-button-title">{{ block.settings.title }}</h1> 
                          {% endif%}

                          {% if block.settings.videorichtext != blank %}
                              <h5 class="tab-button-description">{{ block.settings.videorichtext }}</h5>
                          {% endif%}
                      </button>
                {% endfor %}
              {% endif %}
                
            </div>
        </div>
    </div>
</div>


