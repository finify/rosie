<div class="about-greeting grid lg:grid-cols-2 grid-cols-1 mt-10 gap-y-3">
    <div class="about-greeting__text flex flex-col justify-center lg:px-10 px-4">
        <div class="about-greeting__textwrap">
            <h1 class="lg:text-[50px] text-[30px]">{{ section.settings.heading }}</h1>
            <h4 class="lg:text-[21px] text-[15px]"> {{ section.settings.richtext }}</h4>
        </div>
    </div>
    <div class="about-greeting__image">
        {%- if section.settings.image != blank -%}
        {{-
            section.settings.image
            | image_url: width: 2024
            | image_tag: loading: 'lazy', widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600',
            class:'w-full'
        -}}
        {%- else -%}
        {{- 'image' | placeholder_svg_tag: 'aspect-short placeholder' -}}
        {%- endif -%}
    </div>
</div>

{% schema %}
{
    "name": "about-image-right",
    "class":"about-image-right",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Designed for one handed use"
        },
        {
            "type": "richtext",
            "id": "richtext",
            "label": "Richtext ",
            "default": "<p>The Vibes Only app's custom controller lets you adjust the intensity (0-100%), pick patterns, toggle stealth mode, and control dual motors vibrators independently.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1500 x 1500px .jpg recommended"
        }
    ],
    "presets": [
        {
            "name": "about-image-right"
        }
    ]
}
{% endschema %}
