<style>
    .page-header{
        background-image:url("{{- section.settings.image_banner | image_url: width: 1728 -}}") ;
      }
</style>

<div class="page-header flex flex-col w-full h-[450px] z-0 justify-end pb-20 px-10 lg:bg-center bg-[50%_50%]">
    <div class="text-wrapper flex flex-col text-center">
        <h1 class="text-[50px] lg:text-[64px]">{{- section.settings.heading | capitalize -}}</h1>
        <p class="text-[12px] lg:text-[20px] w-full">{{- section.settings.subheading -}}</p>
    </div>
</div>



{% schema %}
{
    "name": "page-header",
    "class":"page-header",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "image_banner",
          "label": "Image banner",
          "info": "1500 x 1500px .jpg recommended"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Page"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Sub heading",
            "default": "sub heading"
        }

    ],
    "presets": [
        {
            "name": "page-header"
        }
    ]
}
{% endschema %}
