<style>
    .about__item1{
        background-image:url("{{- section.settings.image_left | image_url: width: 1728 -}}") ;
      }
      .about__item2{
        background-image:url("{{- section.settings.image_right | image_url: width: 1728 -}}") ;
      }
</style>
<div class="about lg:grid hidden lg:grid-cols-2 grid-cols-1 gap-2 py-6 h-auto">
    <div class="flex flex-col about__item1 bg-[url('/img/about1.png')] h-[400px] bg-no-repeat bg-cover bg-center justify-end pb-7 bg-gray-600 bg-blend-overlay">
        <div class="about__details text-center">
            <p class="!text-lg">{{- section.settings.heading1 | capitalize -}}</p>
            <h1>
                <span class="browse" >Browse</span> <span class="our">Our</span><br> 
                <span class="cutlerry">{{- section.settings.heading1 | capitalize -}}</span> <span class="collect">Collection</span>
            </h1>
            <a class="text-lg hover-underline-white" href="{{- section.settings.link1 -}}">Browser Collection</a>
        </div>
    </div>
    <div class="flex flex-col about__item2 bg-[url('/img/about2.png')] h-[400px] bg-no-repeat bg-cover bg-center justify-end pb-7 bg-gray-600 bg-blend-overlay">
        <div class="about__details text-center">
            <p class="!text-lg">{{ section.settings.heading1 }}</p>
            <h1><span class="browse">Browse</span> <span class="our">Our</span> <br> <span class="cutlerry">{{- section.settings.heading1 | capitalize -}}</span> <span class="collect">Collection</span></h1>
            <a class="text-lg hover-underline-white" href="{{ section.settings.link1 }}">Browser Collection</a>
        </div>
    </div>
</div>

<div class="w-100 lg:hidden display-block">
    <div class="about-top-text about__details p-4 ">
        <p class="!text-lg !text-black">{{- section.settings.heading1 | capitalize -}}</p>
        <h1>
            <span class="browse !text-black" >Browse</span> <span class="our !text-black">Our</span><br> 
            <span class="cutlerry !text-black">{{- section.settings.heading1 | capitalize -}}</span> <span class="collect !text-black !font-['Plus_Jakarta_Sans']">Collection</span>
        </h1>
        <p class="!text-[17px] !text-black !mt-4">Find what best fits you kitchen in our collection its not just about function at rosies we care a lot about your style too</p>
    </div>

    <div class="swiper mySwiper1 lg:hidden display-block !mb-10">
        <div class="swiper-wrapper">
           
            <div class="swiper-slide">
                <div class="flex flex-col about__item1 h-[400px] bg-no-repeat bg-cover bg-center justify-end pb-12 bg-gray-600 bg-blend-overlay">
                    <div class="about__details text-center">
                        <a class="bg-[#E9442C] px-5 py-3 rounded-full" href="{{- section.settings.link1 -}}">Browser Collection</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <div class="flex flex-col about__item2 h-[400px] bg-no-repeat bg-cover bg-center justify-end pb-12 bg-gray-600 bg-blend-overlay">
                    <div class="about__details text-center">
                        <a class="text-lg bg-[#E9442C] px-5 py-3 rounded-full" href="{{- section.settings.link1 -}}">Browser Collection</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex justify-between pl-3 pr-3 mt-4">
            <div class="swiper-pagination !z-0 lg:hidden display-block"></div>
            
            <div class="swiper-button-prev1 !z-10 lg:hidden display-block"><img src="{{ 'arrow_back.png' | asset_url }}" width="40" height="20" alt=""></div>
            <div class="swiper-button-next1 !z-10 lg:hidden display-block"><img src="{{ 'arrow_forward.png' | asset_url }}" width="40" height="20" alt=""></div>
        </div>
        
        </div>

    
</div>

{% comment %} 
<div class="call-to-action">
    <div class="section-header flex flex-col text-center py-10 items-center">
        <h1 class="text-[20px] lg:text-[48px]">{{ section.settings.heading1 }}</h1>
        <a href="{{ section.settings.link1 }}">{{- section.settings.link1text -}}</a>
    </div>
    
    <div class="call-to-action__image">
         <img src="img/calltoaction.png" class="w-full" alt=""> 
        {%- if section.settings.image_left != blank -%}
          {{-
            section.settings.image_left
            | image_url: width: 2024
            | image_tag: loading: 'lazy', widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600',
            class:'w-full'
          -}}
        {%- else -%}
          {{- 'image' | placeholder_svg_tag: 'aspect-short placeholder' -}}
        {%- endif -%}
    </div>
</div> 
{% endcomment %}


