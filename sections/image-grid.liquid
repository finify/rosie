            "label": "Link 1"
        },
        {
          "type": "image_picker",
          "id": "image_right",
          "label": "Image right",
          "info": "1500 x 1500px .jpg recommended"
        },
        {
            "type": "text",
            "id": "heading2",
            "label": "Heading 2",
            "default": "Plates"
        },
        {
            "type": "url",
            "id": "link2",
            "label": "Link 2"
        }
    ],
    "presets": [
        {
            "name": "image-grid"
        }
    ]
}
{% endschema %}
